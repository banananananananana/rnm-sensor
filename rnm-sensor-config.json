{
    "config_file_source": [
        {
            "source": "https://user:pass@hostname.tld/rnm/rnm-sensor-config.json",
            "use_remote_config": false
        }
    ],
    "logging": {
        "path": "/home/tk/code/rnm_sensor/logs/",
        "probes": {
            "curl": "curl.log",
            "dig": "dig.log",
            "ping": "ping.log",
            "tracepath": "tracepath.log",
            "traceroute": "traceroute.log"
        },
        "sensor": "rnm-sensor.log"
    },
    "targets": [
        {
            "description": "cloudflare",
            "ip": "1.1.1.1",
            "nameserver": "dig -t A cloudflare.com @1.1.1.1",
            "probes": [
                "all"
            ],
            "url": "https://www.cloudflare.com"
        },
        {
            "description": "google",
            "ip": "8.8.8.8",
            "nameserver": "dig -t A google.com @8.8.8.8",
            "probes": [
                "ping",
                "curl"
            ],
            "url": "https://www.google.com"
        },
        {
            "description": "quad9",
            "ip": "9.9.9.9",
            "probes": [
                "ping"
            ]
        }
    ]
}
